{
  "name": "autostyles",
  "version": "1.0.0",
  "description": "Transforms css into automatic style guides.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://techmsi@github.com/techmsi/autostyles.git"
  },
  "author": "techmsi",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "cz": "git-cz",
    "lint": "semistandard --verbose | snazzy || echo 'Please fix the linting errors.'",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci --runInBand",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "bin": {
    "buildguide": "lib/index.js"
  },
  "keywords": [
    "css",
    "styleguide"
  ],
  "dependencies": {
    "chalk": "^1.1.3",
    "css": "^2.2.1",
    "css-parse": "^2.0.0",
    "fs-extra": "^2.0.0",
    "handlebars": "^4.0.6",
    "mustache": "^4.0.0",
    "opn": "^4.0.2",
    "prompts": "^2.3.0",
    "root-path": "^0.2.0",
    "simple-walk": "^0.1.3"
  },
  "devDependencies": {
    "chai": "*",
    "chai-fs": "*",
    "codeclimate-test-reporter": "^0.5.1",
    "commitizen": "*",
    "coveralls": "*",
    "cz-conventional-changelog": "*",
    "greenkeeper-lockfile": "^1.x",
    "jest": "*",
    "jest-junit": "*",
    "semistandard": "*",
    "snazzy": "*"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePaths": [
      "src",
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage/junit"
        }
      ]
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
